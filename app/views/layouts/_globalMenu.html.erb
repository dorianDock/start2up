<% # encoding: utf-8 %>
<!--<div class="ui fixed inverted menu">-->
<div class="ui inverted top fixed menu">

  <div class="ui container">
    <div href="#" class="header item">
      <img class="logo customLogo" src="<%= image_url "tools-icon.png" %>"> Start2Up
    </div>
    <%= link_to 'Home', home_index_path, class: "item active" %>

    <%- if user_signed_in? %>

        <%= link_to 'Entrepreneurs', users_path, class: "item" %>


        <div class="ui dropdown item">
          Liens Utiles
          <i class="dropdown icon"></i>
          <div class="menu">
            <%= link_to 'Tous les liens', useful_links_path, class: "item" %>
            <%= link_to "Idées d'entreprise", home_good_or_bad_idea_path , class: "item" %>
            <%= link_to "S'associer", home_find_your_soul_path , class: "item" %>
            <%= link_to 'Le légal', home_law_is_law_path , class: "item" %>
            <%= link_to 'Financement', home_money_broke_path , class: "item" %>
            <%= link_to 'Infos utiles', home_useful_information_path , class: "item" %>
            <%= link_to 'Trouver un parrain', home_the_godfather_path , class: "item" %>
            <%= link_to 'Les bureaux', home_find_your_roof_path , class: "item" %>
            <%= link_to 'Liens techniques', home_technical_links_path , class: "item" %>
          </div>
        </div>

        <div class="ui dropdown item">
          Relations
          <i class="dropdown icon"></i>
          <div class=" menu">
            <%= link_to 'Followers', followers_user_path(current_user.id), class: "item" %>
            <%= link_to 'People followed', followed_user_path(current_user.id), class: "item" %>
            <a href="<%= mentors_user_path(current_user.id) %>" class="item">
              <i class="icon trophy"></i> Mentors
              <div class="ui grey label"><%= current_user.mentorsCount %></div>
            </a>
            <a href="<%= mentorees_user_path(current_user.id) %>" class="item">
              <i class="icon student"></i> Apprentis
              <div class="ui grey label"><%= current_user.mentoreesCount %></div>
            </a>
            <a href="<%= user_links_path %>" class="item">
              <i class="icon send outline"></i> Requêtes
              <div class="ui red label"><%= current_user.userLinksWaiting %></div>
            </a>
          </div>
        </div>





    <%- end %>

    <div class="right menu">
      <%= if user_signed_in?
            link_to 'Profil', current_user, class: "item"
          else
            link_to 'Connexion', new_user_session_path, class: "item"
          end
      %>
      <%= if user_signed_in?
            link_to 'Déconnexion', destroy_user_session_path, method: 'delete', class: "item"
          else
            link_to "S'inscrire", new_user_registration_path, class: "item"
          end
      %>


    </div>



  </div>
</div>

<script>$('.ui.dropdown')
    .dropdown()
;</script>