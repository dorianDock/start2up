<h1>Gérer les liens</h1>

<%= form_for @newUsefulLink, url: {controller: "useful_link", action: "create"}, method: "post", html: {class: "ui form"} do |f| %>
    <% theStringId=@newUsefulLink.id.to_s %>

    <%= f.hidden_field :id %>
    <div class="field">
      <label>Titre</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Description</label>
      <%= f.text_area :description, size: "60x12" %>
    </div>

    <h4>Catégorie</h4>
    <%= select_tag(:useful_link_category_ids, "", class: "ui dropdown search usefulLinksCategory usefulLinksCategory"+theStringId,
                   data: {:url => data_source_useful_link_category_list_url
                          }) %>

    <br>
    <br>
    <%= f.submit "Valider", class: "ui primary button right floated" %>
<% end %>

