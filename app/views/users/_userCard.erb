<% # encoding: utf-8 %>

<div class="eight wide column">
  <div class="ui stackable special cards">
    <div class="card">
      <div class="blurring dimmable image">
        <div class="ui dimmer">
          <div class="content">
            <div class="center">
              <div class=""><%= render 'becomeFriend', :user => @user %></div>
            </div>
          </div>
        </div>
        <img src="<%= image_url "avatarHomme.png" %>">
      </div>
      <div class="content">
        <span class="header"><%= @user.name %></span>
        <div class="meta">
          <span class="date"> <%= @user.created_at.strftime("Here since %d/%m/%Y") %></span>
        </div>
      </div>
      <div class="extra content">
        <a>
          <i class="idea icon"></i>
          2 Idees
        </a>
      </div>
    </div>
  </div>
</div>