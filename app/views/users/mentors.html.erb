<% # encoding: utf-8 %>
<h1>Vos Mentors</h1>
<% unless @users.any? %>
    <h2>Section vide pour l'instant: Les entrepeneurs ont besoin de talents pour les guider, encore un peu de patience :)</h2>
<% else %>
    <h2>N'hesitez pas à contacter vos mentors, ils sont passés par là avant vous !</h2>
<% end %>


<%= will_paginate %>

<div class="ui three stackable special cards">
  <% @users.each do |user| %>
      <%= render 'simpleUserCard', :user => user %>
  <% end %>
</div>

<%= will_paginate %>
