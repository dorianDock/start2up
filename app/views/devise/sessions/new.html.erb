<h2>Se connecter</h2>

<%= form_for(resource, as: resource_name, html:{ class: "ui form customFormForSessions"}, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <label>E-mail</label>
      <div class="one fields">
        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>

      </div>
    </div>
    <div class="field">
      <label>Mot de passe</label>
      <div class="one fields">
        <div class="field">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>


  <% if devise_mapping.rememberable? -%>

    <div class="inline field">
      <div class="ui slider checkbox">
        <%= f.check_box :remember_me %>
        <label>Se souvenir de moi</label>
      </div>
      <label></label>
    </div>


  <% end -%>

  <div class="">
    <%= f.submit "Connexion", class: "ui button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
