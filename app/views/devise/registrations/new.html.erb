<% # encoding: utf-8 %>
<h2>S'inscrire</h2>

<%= form_for(resource, as: resource_name,html:{ multipart:true, class: "ui form customFormForSessions"}, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <div class="fields">
      <div class="six wide field">
        <label>Nom</label>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="six wide field">
        <label>Prénom</label>
        <%= f.text_field :firstname, autofocus: true %>
      </div>

    </div>

    <div class="field">
      <%= f.label :email %>
      <div class="one fields">
        <div class="six wide field">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label :avatar %>
      <div class="one fields">
        <div class="six wide field">
          <%= f.file_field :avatar %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label "Mot de passe" %>
      <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caractères minimum)</em>
      <% end %>
      <div class="one fields">
        <div class="six wide field">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>
    </div>


    <div class="field">
      <%= f.label "Confirmation du mot de passe" %>
      <div class="one fields">
        <div class="six wide field">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
    </div>



  <div class="actions">
    <%= f.submit "Sign up",class: "ui button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
