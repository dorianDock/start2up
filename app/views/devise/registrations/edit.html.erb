<% # encoding: utf-8  %>
<h2>Changez vos informations de connexion</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form customFormForSessions", method: :put}) do |f| %>
    <%= devise_error_messages! %>

    <div class="fields">
      <div class="six wide field">
        <label>Nom</label>
        <%= f.text_field :name, autofocus: true %>
      </div>
      <div class="six wide field">
        <label>Prénom</label>
        <%= f.text_field :firstname, autofocus: true %>
      </div>

    </div>

    <!--<div class="field">-->
      <!--<label>Nom et Prénom</label>-->
      <!--<div class="two fields">-->
        <!--<div class="field">-->
          <!--<%= f.text_field :firstname, autofocus: true %>-->
        <!--</div>-->
        <!--<div class="field">-->
          <!--<%= f.text_field :name, autofocus: true %>-->
        <!--</div>-->
      <!--</div>-->
    <!--</div>-->


    <div class="twelve wide field">
      <%= f.label :email %><br/>
      <%= f.email_field :email %>
    </div>


    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Mail toujours pas confirmé: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="twelve wide field">
      <%= f.label "Nouveau mot de passe" %> <i>(Laissez à vide si vous ne voulez pas le changer)</i><br/>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="twelve wide field">
      <%= f.label "Confirmation du nouveau mot de passe" %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="twelve wide field">
      <%= f.label "Mot de passe actuel" %> <i>(Nous avons besoin de votre mot de passe actuel pour confirmer les changements)</i><br/>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Enregistrer", class: "ui button green" %>
    </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Pas Satisfait(e)? <%= button_to "Supprimer mon compte", registration_path(resource_name),class: 'ui button orange' ,data: {confirm: "Are you sure?"}, method: :delete %></p>

<i class="icon undo"></i>
<%= link_to "Back", :back, class: "ui tiny header" %>
