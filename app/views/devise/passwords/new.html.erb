<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {  class: "ui form customFormForSessions", method: :post }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email %>
      <div class="one fields">
        <div class="field">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
    </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class: "ui button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
