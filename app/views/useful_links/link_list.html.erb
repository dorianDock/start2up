<% # encoding: utf-8   %>
<h1><%= @page_title %></h1>
<%- if current_user.admin? %>
    <a class="ui primary button" href="<%= new_useful_link_path %>"><i class="fa fa-plus"></i> Ajouter un lien</a>
<%- end %>

<div class="ui divided items">

<%- @usefulLinks.each do |useful_link| %>

      <div class="item">
        <div class="image ui">
          <% if useful_link.picture.exists? %>
              <%= image_tag useful_link.picture.url(:medium),  height: '300', :width => '300', :class => '' %>
          <% else %>
              <%= image_tag 'basicPicture.png', height: '300', :width => '300', :class => '' %>
          <% end %>


        </div>
        <div class="content">
          <a class="header">

            <%= useful_link.title %>
          </a>
          <div class="meta">
            <span>Description</span>
          </div>
          <div class="description">
            <div class="textForItemDescription"><%= simple_format(useful_link.description) %></div>
          </div>
          <div class="extra">
            <div class=""><%= useful_link.created_at.strftime("%d/%m/%Y") %></div>
          </div>
        </div>
      </div>


<% end %>
</div>